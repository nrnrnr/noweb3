function List.slow_length(list)
  local i, n, v
  i = nil
  n = 0
  if type(list) ~= "table" then
    errormsg("Length of non-list (", type(list), ") ", image(list))
  end
  repeat
    i, v = next(list, i)
    if (i ~= nil) then
      n = n + 1
    end
  until (i == nil)
  return n
end
